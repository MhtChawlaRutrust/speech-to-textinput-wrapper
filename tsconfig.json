{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es6", "dom", "es2017"],
      "module": "commonjs",
      "jsx": "react-native",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "*": ["src/*", "node_modules/*"]
      },
      "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
      "node_modules",
      "**/__tests__"
    ],
    "include": [
      "src/**/*"
    ]
  }